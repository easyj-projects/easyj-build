<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.easyj</groupId>
	<artifactId>easyj-build-parent</artifactId>
	<version>${revision}</version>
	<packaging>pom</packaging>
	<name>Parent</name>
	<url>https://gitee.com/easyj-projects/easyj-build</url>

	<properties>
		<!-- 项目版本 -->
		<revision>0.1.0-SNAPSHOT</revision>

		<!-- Maven插件版本  -->
		<flatten-maven-plugin.version>1.2.7</flatten-maven-plugin.version>
	</properties>

	<modules>
		<module>dependencies</module>
		<module>build</module>
	</modules>

	<inceptionYear>2021</inceptionYear>

	<licenses>
		<license>
			<name>Apache License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<organization>
		<name>Easyj开源项目组织</name>
		<url>https://gitee.com/easyj-projects</url>
	</organization>

	<developers>
		<developer>
			<id>wangliang181230</id>
			<name>王良</name>
			<url>https://gitee.com/wangliang181230</url>
			<email>841369634@qq.com</email>
			<organization>浙江蕙康科技有限公司</organization>
			<organizationUrl>https://www.jyhk.com</organizationUrl>
			<roles>
				<role>Java架构师</role>
			</roles>
		</developer>
	</developers>

	<scm>
		<url>https://gitee.com/easyj-projects/easyj-build</url>
		<connection>scm:git@gitee.com:easyj-projects/easyj-build.git</connection>
		<developerConnection>scm:git@gitee.com:easyj-projects/easyj-build.git</developerConnection>
		<tag>HEAD</tag>
	</scm>

	<issueManagement>
		<system>gitee</system>
		<url>https://gitee.com/easyj-projects/easyj-build/issues</url>
	</issueManagement>

	<build>
		<!-- 插件管理 -->
		<pluginManagement>
			<plugins>
				<!-- 插件定义：Flatten -->
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>flatten-maven-plugin</artifactId>
					<version>${flatten-maven-plugin.version}</version>
					<configuration>
						<updatePomFile>true</updatePomFile>
					</configuration>
					<executions>
						<execution>
							<id>flatten</id>
							<phase>process-resources</phase>
							<goals>
								<goal>flatten</goal>
							</goals>
						</execution>
						<execution>
							<id>flatten.clean</id>
							<phase>clean</phase>
							<goals>
								<goal>clean</goal>
							</goals>
						</execution>
					</executions>
				</plugin>
			</plugins>
		</pluginManagement>

		<!-- 使用插件 -->
		<plugins>
			<!-- 使用插件：Flatten -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>flatten-maven-plugin</artifactId>
				<configuration>
					<flattenMode>resolveCiFriendliesOnly</flattenMode>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<!--资源上传管理-->
	<distributionManagement>
		<repository>
			<id>kt-nexus-releases</id>
			<url>http://www.kingtsoft.com:33084/nexus/content/repositories/releases</url>
		</repository>
		<snapshotRepository>
			<id>kt-nexus-snapshots</id>
			<url>http://www.kingtsoft.com:33084/nexus/content/repositories/snapshots</url>
		</snapshotRepository>
	</distributionManagement>
</project>